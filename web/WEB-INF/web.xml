<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- Login Servlet Mapping -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Activities Servlet Mapping -->
    <servlet>
        <servlet-name>ActivitiesServlet</servlet-name>
        <servlet-class>Controller.ActivitiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActivitiesServlet</servlet-name>
        <url-pattern>/ActivitiesServlet</url-pattern>
    </servlet-mapping>

    <!-- Register Page Servlet Mapping -->
    <servlet>
        <servlet-name>RegisterPageServlet</servlet-name>
        <servlet-class>Controller.RegisterPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterPageServlet</servlet-name>
        <url-pattern>/RegisterPageServlet</url-pattern>
    </servlet-mapping>

    <!-- ForgotPasswordServlet Mapping -->
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>Controller.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/ForgotPasswordServlet</url-pattern>
    </servlet-mapping>

    <!-- UpdatePasswordServlet Mapping -->
    <servlet>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <servlet-class>Controller.UpdatePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <url-pattern>/UpdatePasswordServlet</url-pattern>
    </servlet-mapping>

    <!-- ClubSettingsServlet Mapping -->
    <servlet>
        <servlet-name>ClubSettingsServlet</servlet-name>
        <servlet-class>Controller.ClubSettingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClubSettingsServlet</servlet-name>
        <url-pattern>/clubSettings</url-pattern>
    </servlet-mapping>

    <!-- UpdateStudentServlet Mapping -->
    <servlet>
        <servlet-name>UpdateStudentServlet</servlet-name>
        <servlet-class>Controller.UpdateStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStudentServlet</servlet-name>
        <url-pattern>/UpdateStudentServlet</url-pattern>
    </servlet-mapping>

    <!-- Session Timeout (in minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
